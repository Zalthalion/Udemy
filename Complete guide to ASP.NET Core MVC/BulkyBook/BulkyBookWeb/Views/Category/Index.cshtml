@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">

    <div class="row">
        <div class="col-6">
            <h1>List of Categories</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-square"></i> &nbsp; New Category
            </a>
        </div>
    </div>

    <div class="row pt-4">
         <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td width="50%">@category.Name</td>
                        <td width="30%">@category.DisplayOrder</td>
                        <td>
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger"><i class="bi bi-trash3"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>